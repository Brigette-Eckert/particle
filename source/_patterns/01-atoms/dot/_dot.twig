{#
    Dots!
    dot_element: String: 'a' if including links. Otherwise it defaults to 'button'
    background: String: The background color of the dot element (pink, chartreuse, yellow, green, blue, purple, sliver, darkgrey)
    color: String: The color of the text on the dot. (pink, chartreuse, yellow, green, blue, purple, sliver, darkgrey)
    link: String: The html 'value' attribute.
    text: String: Display text on the dot.

#}

{% set dot_element = dot_element | default ('button') %}


{% set dot_classes = [
    'dot',
     background ? 'background-' ~ background : 'background-' ~ 'pink',
     color ? 'color-' ~ color : 'color-' ~ 'darkgrey',

] | sort | join(' ') | trim %}

{% set dot_attributes = [
    link ? 'href=' ~ link : ''
] | sort | join(' ') | trim %}

<{{ dot_element }} class="{{ dot_classes }}" {{ dot_attributes }}>
    {{ text }}
</{{ dot_element }}>

