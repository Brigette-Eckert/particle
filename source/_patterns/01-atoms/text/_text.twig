{#
/**
 * @file
 * text
 *
 * Available variables for text:
 *    - text.variable_name [variable_type]: Description of the variable. Example below.
 *    - text.invert [bool]: When set, colors will be inverted for light display on dark background.
 */
#}


{% set text_classes = [
    'text',
    background ? 'background-' ~ background,
    outline ? 'outline-' ~ outline,
    display ? 'display-' ~ display,
    text_other_classes
] | sort | join(' ') | trim %}

{% set text_attributes = [
    placeholder ? 'placeholder="' ~ placeholder ~ '"',
    text_other_attributes
] | sort | join(' ') | trim %}

<input class="{{ text_classes }}" {{ text_attributes }}>